{
  "manifest_version": 3,
  "name": "SpotlightDraw",
  "version": "0.1.0",
  "description": "Annotate web pages during presentations and screen recordings with customizable drawing tools.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "commands": {
    "toggle-drawing-mode": {
      "suggested_key": {
        "default": "Alt+A"
      },
      "description": "Toggle rectangle drawing mode"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "shortcuts-data.js",
        "content/content.js"
      ],
      "css": [
        "tokens.css",
        "components.css",
        "content/content.css"
      ]
    }
  ]
}
