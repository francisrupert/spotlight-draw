{
  "manifest_version": 3,
  "name": "Box Highlight",
  "version": "0.1.0",
  "description": "Basic Chrome extension scaffold for highlighting boxes on web pages.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "commands": {
    "toggle-drawing-mode": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Toggle rectangle drawing mode"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ]
}
